<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="68dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtCombine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:textColor="@color/teal_700"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/thumbnails1"
                android:layout_width="82dp"
                android:layout_height="114dp"
                tools:srcCompat="@android:drawable/ic_input_add" />

            <ImageView
                android:id="@+id/thumbnails2"
                android:layout_width="82dp"
                android:layout_height="114dp"
                tools:srcCompat="@android:drawable/ic_input_add" />

            <ImageView
                android:id="@+id/thumbnails3"
                android:layout_width="82dp"
                android:layout_height="114dp"
                tools:srcCompat="@android:drawable/ic_input_add" />

            <ImageView
                android:id="@+id/thumbnails4"
                android:layout_width="82dp"
                android:layout_height="114dp"
                tools:srcCompat="@android:drawable/ic_input_add" />

            <ImageView
                android:id="@+id/thumbnails5"
                android:layout_width="82dp"
                android:layout_height="114dp"
                tools:srcCompat="@android:drawable/ic_input_add" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnDeletee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_500"
                android:text="Delete" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>